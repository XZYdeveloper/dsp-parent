<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.CategoryMapper">

    <resultMap id="topcategory" type="com.entity.TopCategory">
        <id property="id" column="id"></id>
        <result property="title" column="title"></result>
    </resultMap>

    <resultMap id="underlyingcategory" type="com.entity.UnderlyingCategory">
        <id property="id" column="id"></id>
        <result property="title" column="title"></result>
        <result property="cateId" column="cate1_id"></result>
    </resultMap>

    <resultMap id="goods" type="com.entity.Goods">
        <id property="id" column="goods_id"></id>
        <result property="pic" column="pic"></result>
        <result property="title" column="title"></result>
        <result property="price" column="price"></result>
        <result property="stock" column="stock"></result>
        <result property="sales" column="sales"></result>
        <result property="content" column="content"></result>
        <result property="cateId" column="cate_id"></result>
    </resultMap>

    <!--查询所有一级分类-->
    <select id="getAllTopCategory" resultMap="topcategory">
        select * from category_1
    </select>

    <!--根据一级分类的id查询二级分类-->
    <select id="findUnderlyingById" resultMap="underlyingcategory">
    SELECT * FROM category_2 LEFT OUTER JOIN category_1 ON category_1.id=category_2.cate1_id where category_1.id = #{id}
    </select>

    <!--根据二级分类的id查询商品-->
    <select id="findGoodsById" resultMap="goods">
    SELECT * FROM goods LEFT OUTER JOIN category_2 ON category_2.id=goods.cate_id where category_2.id = #{id}
    </select>

</mapper>